@model IEnumerable<GoCebuTravelAndToursMVC.TourPackage>

@{
    ViewBag.Title = "Home";
}


<div class="container-fluid">
    <div id="indicators" class="carousel slide" data-ride="carousel">
        @*<ol class="carousel-indicators">
                @{
                    <li data-target="#indicators" data-slide-to="0" class="active"></li>
                    if (Model != null)
                    {
                        for( int i = 1; i <= Model.Count(); i++ )
                        {
                            <li data-target="#indicators" data-slide-to="@i" class=""></li>
                        }
                    }

                }

            </ol>*@
        <div class="carousel-inner carousel-lay-inner " role="listbox">
            @{
                <div class="carousel-item carousel-lay-item active">
                    <div class="carousel-caption">
                    </div>
                    <img class="d-block w-100 h-100 carousel-img img-fluid" src="~/Content/img/tour/caro-first-active.jpg">

                </div>
                if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <div class="item carousel-item carousel-lay-item">
                            <div class="carousel-caption">
                                <h4 class="carousel-title">@item.TourPackageName</h4>
                                <hr class="carousel-hr" align="center" width="50%"/>
                                <a href='@Url.Action("TourPackage", "Tour", new { Id = item.Id, Package = item.TourPackageName})' class="btn btn-primary carousel-btn">Learn more</a>
                            </div>
                            <img class="d-block w-100 h-100 carousel-img img-fluid" src="~/Content/img/tour/@item.CaroImgFileName">
                        </div>
                    }
                }
            }

        </div>

        <a class="carousel-control-prev" href="#indicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#indicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>


    </div>
</div>


@Html.Action("ListTourPackages", "Home")

@Html.Action("Reviews", "Home")



